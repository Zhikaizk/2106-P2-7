@{
    ViewData["Title"] = "Household Feedback System";
}

@* Questions that household may faced *@
<h1>Common Problem</h1>

<div id="fbDevices">
    <div class="card">
        <div class="card-header" id="headingOne">
            <button class="btn btn-link fb_topic" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                aria-controls="collapseOne">
                Devices
            </button>
        </div>
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#fbDevices">
            <div class="card-body">
                <p class="card-text questions">How do I add a new device?</p>
                <p class="card-text">Answer</p>
                <p class="card-text questions">Why can't I find my device?</p>
                <p class="card-text">Answer</p>
            </div>
        </div>
    </div>

    <div id="fbConnection">
        <div class="card">
            <div class="card-header" id="headingTwo">
                <button class="btn btn-link fb_topic" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    Connection
                </button>
            </div>
            <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#fbConnection">
                <div class="card-body">
                    <p class="card-text questions">Why can't my device connect to the network?</p>
                    <p class="card-text">Answer</p>
                    <p class="card-text questions">No router to connect when adding device?</p>
                    <p class="card-text">Answer</p>
                </div>
            </div>
        </div>

        <div id="fbAccount">
            <div class="card">
                <div class="card-header" id="headingThree">
                    <button class="btn btn-link fb_topic" data-toggle="collapse" data-target="#collapseThree"
                        aria-expanded="true" aria-controls="collapseThree">
                        Account
                    </button>
                </div>
                <div id="collapseThree" class="collapse show" aria-labelledby="headingThree"
                    data-parent="#fbConnection">
                    <div class="card-body">
                        <p class="card-text questions">How do I reset my password?</p>
                        <p class="card-text">Answer</p>
                        <p class="card-text questions">I am unable to login to my account.</p>
                        <p class="card-text">Answer</p>
                    </div>
                </div>
            </div>

            @* Submission of Feedback Form *@
            <div class="card bg-info">
                <div class="card-body">
                    <h5 class="card-title">Submit Feedback</h5>

                    <form method="post" asp-controller="Feedback" asp-action="feedbackUser">
                        <div class="form-group row">
                            <label for="fbType" class="col-sm-2 col-form-label">Topic</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="fbType" name="fbType">
                                    <option>Devices</option>
                                    <option>Connection</option>
                                    <option>Accounts</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="FeedbackContent" class="col-sm-2 col-form-label">Content</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="feedback" id="FeedbackContent" rows="3"
                                    placeholder="Please give a description on the issues you are facing."></textarea>
                            </div>
                        </div>
                        <button type="submit" id="fb_submit_btn" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
