@{
  ViewData["Title"] = "Administrator Feedback System";
}

<div class="text-center">
  <h1 class="display-4">Feedback System</h1>
  <form>
    <div class="form-group">
      <label for="FeedbackStatus">Status</label>
      <select class="form-control" id="FeedbackStatus" name="fbType">
        <option>All</option>
        <option>Resolved</option>
        <option>Pending</option>
      </select>
    </div>
  </form>
</div>
<div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Feedback ID</th>
        <th scope="col">Household Email</th>
        <th scope="col">Topic</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        @* feedbackId *@
        <th scope="row" ><a href = '@Url.Action("feedbackAdminReply", "Feedback")';>3</a></th>

        @* hosueholdEmail *@
        <td>jialin@gmail.com</td>

        @* feedbackTyoe *@
        <td>Account</td>

        @* feedbackStatus *@
        <td>
          <form>
            <div class="form-group row">
              <div class="col-sm-10">
                <select class="form-control" id="fbStatusUpdate" name="fbStatusUpdate">
                  <option>Pending</option>
                  <option>Resolved</option>
                </select>
              </div>
            </div>

            <button type="submit" id="fbSubmitBtnUpdate" class="btn btn-success">Update</button>
          </form>

        </td>
      </tr>
    </tbody>
  </table>
</div>
