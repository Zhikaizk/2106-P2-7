@{
    ViewData["Title"] = "ResetPasswordPage";
}

<h1>Reset Password Page</h1>

<p>Please enter your email below: </p>

<div class="row">
    <div class="col-md-4">
    <form asp-action="ResetPasswordPage" method="post" asp-controller="PasswordReset">
        <div class="form-group">
            <label class="control-label">Household Email</label>
            <input name="householdEmail" class="form-control">
            <span class="text-danger"></span>
        </div> 

        <div class="form-group">
            <label class="control-label">New Password</label>
            <input name="newResetPassword" class="form-control">
            <span class="text-danger"></span>
        </div> 

        <div class="form-group">
            <label class="control-label">Confirm Password</label>
            <input name="confirmResetPassword" class="form-control">
            <span class="text-danger"></span>
        </div> 

       <div class="form-group"> 
           <button type="submit" class="btn btn-success" value="Reset New Password" name="Reset Password" id="submitButton" >Reset New Password</button> 

       </div>
     </form> 
    </div> 
 </div> 

@if(ViewBag.Message!= null){
    <script type="text/javascript">
        window.onload = function(){
            alert("@ViewBag.Message");
        }
</script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}